{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "bun",
      "request": "launch",
      "name": "Debug Bun Tests",
      "program": "${workspaceFolder}/__tests__/${relativeFileDirname}/${fileBasename}",
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "watchMode": false
    },
    {
      "type": "bun",
      "request": "launch",
      "name": "Debug Current Test File",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false
    },
    {
      "type": "bun",
      "request": "launch",
      "name": "Run All Tests",
      "program": "test",
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false
    }
  ]
}
