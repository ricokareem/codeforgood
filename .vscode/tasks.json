{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Bun: Run Tests",
      "type": "shell",
      "command": "bun",
      "args": ["test"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Bun: Run Tests (Watch)",
      "type": "shell",
      "command": "bun",
      "args": ["test", "--watch"],
      "group": "test",
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "Bun: Run Current Test File",
      "type": "shell",
      "command": "bun",
      "args": ["test", "${relativeFile}"],
      "group": "test",
      "problemMatcher": []
    }
  ]
}
